<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <TextView
        android:id="@+id/textView_msg1"
        android:layout_width="313dp"
        android:layout_height="83dp"
        android:fontFamily="@font/jua_regular"
        android:text="Logea y empeza a tranferir!"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="34dp" />

    <TextView
        android:id="@+id/textView_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jua_regular"
        android:text="Email"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout_email"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944"
        tools:layout_editor_absoluteX="33dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_email"
        android:layout_width="351dp"
        android:layout_height="54dp"

        app:layout_constraintStart_toStartOf="@+id/textView_email"
        tools:layout_editor_absoluteY="212dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jua_regular"
            android:hint="Ingresa tu email" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView_contrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jua_regular"
        android:text="Contraseña"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout_email"
        tools:layout_editor_absoluteY="295dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_contrasena"
        android:layout_width="355dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="@+id/textView_contrasena"
        tools:layout_editor_absoluteY="321dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jua_regular"

            android:hint="Ingresa tu contraseña" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="204dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/boton_redondeado"
        android:fontFamily="@font/jua_regular"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_contrasena" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear una nueva cuenta"
        android:fontFamily="@font/jua_regular"
        android:textColor="@color/azul_alkewallet"
        android:textSize="20dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_login" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jua_regular"
        android:text="Olvidaste tu contraseña?"
        android:textColor="@color/azul_alkewallet"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout_contrasena"
        tools:layout_editor_absoluteY="376dp" />


</androidx.constraintlayout.widget.ConstraintLayout>