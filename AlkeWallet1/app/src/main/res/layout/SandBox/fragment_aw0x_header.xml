<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/encabezado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/homepage_background"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jua_regular"
            android:text="Inicio"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/textView_saludo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jua_regular"
            android:text="Hola, Amanda!"
            android:textColor="#9AFFFFFF"
            android:textSize="20dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="40dp"/>


        <TextView
            android:id="@+id/textView_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jua_regular"
            android:text="Balance Total"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/textView_currency_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jua_regular"
            android:text="$"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/textView_saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jua_regular"
            android:text="124.57"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="70dp"/>

        <ImageView
            android:id="@+id/imageView_foto_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            tools:srcCompat="@drawable/profile_picture" />

        <ImageView
            android:id="@+id/imageView_notificaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/notifications_icon"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="200dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/transacciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="30dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/encabezado"
        />


</RelativeLayout>